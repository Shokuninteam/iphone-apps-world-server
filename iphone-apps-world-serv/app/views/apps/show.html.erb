<h1>Apps#show</h1>
<%= link_to 'edit', edit_app_path(@app)%>
<p>
	<strong>Name:</strong>
	<%= @app.name %>
</p>
<p>
	<strong>url:</strong>
	<%= @app.url %>
</p>
<p>
	<strong>price:</strong>
	<%= @app.price %>
</p>
<p>
	<strong>description:</strong>
	<%= @app.description %>
</p>
<p>
	<strong>analysis:</strong>
	<%= @app.analysis %>
</p>


<!-- SHOWPros -->
<h2>Pros</h2>
<table>
	<tr>
		<th>description</th>
		<th colspan="2"></th>
	</tr>
<%= render @app.pros%>
</table>

<!-- SHOW Cons-->
<h2>Cons</h2>
<table>
	<tr>
		<th>description</th>
		<th colspan="3"></th>
	</tr>
<%= render @app.cons%>
</table

<!-- SHOW top10-->
<h2>Top10</h2>
<% if @app.top10s.any? %>
	<h2>Rank</h2>
	<table>
		<tr>
			<th>rank</th>
			<th colspan="3"></th>
		</tr>
	<%= render @app.top10s %>
	</table
<% else %>
	<p>New top 10: <%= link_to 'new', new_app_top10_path(@app)%></p>
<% end %>

<!-- show images -->
<h2>Images</h2>
<%= render @app.images %>

<h2>Add new image</h2>
<%= render 'images/form' %>
