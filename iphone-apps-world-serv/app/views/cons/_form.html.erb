<%= form_for([@app, @app.cons.build]) do |f|%>

<% if @category.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@category.errors.count, "error")%> prohibited this app for being saved:
		</h2>
		<ul>
			<% @category.errors.full_messages.each do |msg| %>
			<li><%= msg%></li>
			<% end %>
		</ul>
	</div>
	<% end %>


	<p>
		<%= f.label :content%><br>
		<%= f.text_area :content %>
	</p>

	<p>
		<%= f.submit%>
	</p>
	<%end%>