<%= form_for([@app, @app.cons.build]) do |f|%>

<% if @app.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@app.errors.count, "error")%> prohibited this app for being saved:
		</h2>
		<ul>
			<% @app.errors.full_messages.each do |msg| %>
			<li><%= msg%></li>
			<% end %>
		</ul>
	</div>
	<% end %>


<div class="row">
	<div class="large-5 large-offset-2 columns">
		<%= f.label :content%><br>
		<%= f.text_area :content %>


		<div class="button secondary">
			<%= f.submit%>
		</div>
	</div>
</div>
	<%end%>